{
  "name": "my-book-be",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "./apps/*",
    "./libs/*"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "post:build": "nest build post",
    "post:start": "nest start post",
    "post:dev": "nest start post --watch",
    "post:debug": "nest start post --debug --watch",
    "post:prod": "node dist/apps/post/apps/post/src/main",
    "post-reco:build": "nest build post-recommendation",
    "post-reco:start": "nest start post-recommendation",
    "post-reco:dev": "nest start post-recommendation --watch",
    "post-reco:debug": "nest start post-recommendation --debug --watch",
    "post-reco:prod": "node dist/apps/post-recommendation/apps/post-recommendation/src/main",
    "friend-reco:build": "nest build friend-recommendation",
    "friend-reco:start": "nest start friend-recommendation",
    "friend-reco:dev": "nest start friend-recommendation --watch",
    "friend-reco:debug": "nest start friend-recommendation --debug --watch",
    "friend-reco:prod": "node dist/apps/friend-recommendation/apps/friend-recommendation/src/main",
    "friend-job:build": "nest build friend-job",
    "friend-job:start": "nest start friend-job",
    "friend-job:dev": "nest start friend-job --watch",
    "friend-job:debug": "nest start friend-job --debug --watch",
    "friend-job:prod": "node dist/apps/friend-job/apps/friend-job/src/main",
    "conversation:build": "nest build conversation",
    "conversation:start": "nest start conversation",
    "conversation:dev": "nest start conversation --watch",
    "conversation:debug": "nest start conversation --debug --watch",
    "conversation:prod": "node dist/apps/conversation/apps/conversation/src/main",
    "main:build": "nest build main-app",
    "main:start": "nest start main-app",
    "main:dev": "nest start main-app --watch",
    "main:debug": "nest start main-app --debug --watch",
    "main:prod": "node dist/apps/main-app/apps/main-app/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "env-cmd jest --config ./apps/main-app/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^9.4.3",
    "@nestjs/config": "2.3.2",
    "@nestjs/core": "9.4.2",
    "@nestjs/microservices": "^9.4.3",
    "@nestjs/mongoose": "^9.2.2",
    "@nestjs/swagger": "6.3.0",
    "bcryptjs": "2.4.3",
    "@nestjs/platform-express": "9.4.2",
    "@nestjs/typeorm": "9.0.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "ioredis": "^5.3.2",
    "mongodb": "^5.6.0",
    "mongoose": "^7.2.3",
    "nestjs-i18n": "10.2.6",
    "pg": "8.11.0",
    "redis": "^4.6.7",
    "reflect-metadata": "0.1.13",
    "rimraf": "5.0.1",
    "rxjs": "7.8.1",
    "source-map-support": "0.5.21",
    "typeorm": "0.3.16",
    "uuidv4": "^6.2.13",
    "@nestjs/jwt": "10.0.3"
  },
  "devDependencies": {
    "@nestjs/cli": "9.5.0",
    "@nestjs/schematics": "9.2.0",
    "@nestjs/testing": "9.4.2",
    "@types/bcryptjs": "2.4.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "4.17.17",
    "@types/facebook-js-sdk": "3.3.6",
    "@types/jest": "29.5.1",
    "@types/multer": "1.4.7",
    "@types/node": "18.16.14",
    "@types/passport-anonymous": "1.0.3",
    "@types/passport-jwt": "3.0.8",
    "@types/supertest": "2.0.12",
    "@types/twitter": "1.7.1",
    "@typescript-eslint/eslint-plugin": "5.59.7",
    "@typescript-eslint/parser": "5.59.7",
    "env-cmd": "10.1.0",
    "eslint": "8.41.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "hygen": "6.2.11",
    "is-ci": "3.0.1",
    "jest": "29.5.0",
    "prettier": "2.8.8",
    "supertest": "6.3.3",
    "ts-jest": "29.1.0",
    "ts-loader": "9.4.3",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "tslib": "2.5.2",
    "typescript": "^4.9.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/databases(|/.*)$": "<rootDir>/libs/databases/src/$1",
      "^@app/storage-worker(|/.*)$": "<rootDir>/libs/storage-worker/src/$1",
      "^@app/common(|/.*)$": "<rootDir>/libs/common/src/$1",
      "^@app/microservices(|/.*)$": "<rootDir>/libs/microservices/src/$1"
    }
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
